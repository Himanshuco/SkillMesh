<% layout("layouts/boilerplate") %>
<!-- Use the boilerplate layout for consistent site-wide structure -->

<div class="hero-section">
  <!-- Hero section with main marketing message -->

  <main class="main-content">
    <!-- Main content area inside the hero -->

    <h1 class="headline">Connect, Collaborate<br>and Trade Skills</h1>
    <!-- Large headline with a line break -->

    <p class="subtext">
      Earn time credits by <span>helping others</span>, use them to join teams and work on projects.
    </p>
    <!-- Subtext highlighting core value proposition -->

    <button class="primary-button">Get Started</button>
    <!-- Call to action button -->
  </main>
</div>

<section class="cards-wrapper">
  <!-- Section wrapping feature cards -->

  <div class="cards-container">
    <!-- Container holding individual cards -->

    <div class="card">
      <h2>Earn Time Credits</h2>
      <p>Offer your skills and assistance to others</p>
      <!-- Card explaining earning credits feature -->
    </div>

    <div class="card">
      <h2>Join a Team</h2>
      <p>Get matched with teammates for projects</p>
      <!-- Card explaining team collaboration feature -->
    </div>
  </div>
</section>

<div class="wave-container"></div>
<!-- Decorative wave element (likely styled with CSS) -->
